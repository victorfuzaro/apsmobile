<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consulta_clientes">
    <ListView
        android:id="@+id/lvClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:columnCount="7"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvClientes">

        <TextView
            android:id="@+id/codigo"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/endereco"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/emptyCodCategLivro" />

        <TextView
            android:id="@+id/celular"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/emptyCatLeitores" />

        <TextView
            android:id="@+id/email"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/emptyCatLeitores" />

        <TextView
            android:id="@+id/cpf"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/emptyCatLeitores" />

        <TextView
            android:id="@+id/nascimento"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:text="@string/emptyCatLeitores" />

        <TextView
            android:id="@+id/categoriaLeitor"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:text="@string/emptyCatLeitores" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>